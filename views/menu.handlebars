<h2 class="grey-text text-lighten-2 pageTitle">
    Choose a Madlib</h2>
<div class="row">
    {{#each story}}
    <div class="col s12 xl6">
        <a href="/story/{{this.id}}">
            <div class="card horizontal grey lighten-3">
                <div class="card-image">
                    <img class="menu-story-image" src="http://nerdipop.co.za/wp-content/uploads/2015/03/11168085_800.jpg">
                </div>
                <div class="card-stacked">
                    <div class="card-content">
                        <span class="card-title">{{this.storyName}}</span>
                        <p>{{this.storyDesc}}</p>
                    </div>
                </div>
            </div>
        </a>
    </div>
    {{/each}}
</div>