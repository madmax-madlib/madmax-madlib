<div class="container">
    <h2 class="text-center white-text">Choose a Madlib</h2>
    <div class="row">
        {{#each story}}
        <div class="col s12 m6">
            <a href="/story/{{this.id}}">
            <div class="card horizontal">
                <div class="card-image">
                    <img src="http://nerdipop.co.za/wp-content/uploads/2015/03/11168085_800.jpg">
                </div>
                <div class="card-stacked">
                    <div class="card-content">
                        <span class="card-title">{{this.storyName}}</span>
                        <p>{{this.storyDesc}}</p>
                    </div>
                    {{!-- <div class="card-action">
                        <a href="/story/{{this.id}}">Go</a>
                    </div> --}}
                </div>
            </div>
            </a>
        </div>
        {{/each}}
    </div>
</div>